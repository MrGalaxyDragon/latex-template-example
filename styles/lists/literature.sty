\ProvidesPackage{styles/lists/literature}

\RequirePackage[
    backend=biber,
    doi=true,
    style=alphabetic,
    urldate=long
]{biblatex}

\addbibresource{shared/literature.bib}

\newcounter{citations}
\let\oldcite\cite
\renewcommand{\cite}[1]{%
    \stepcounter{citations}%
    \oldcite{#1}%
}